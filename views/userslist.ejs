<html>
    <head>
        <title>REST API</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                text-align: center;
                background-color: #f4f4f4;
                margin: 0;
                padding: 20px;
            }
            h1 {
                color: #333;
                margin-bottom: 20px;
            }
            ul {
                list-style-type: none;
                padding: 0;
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
            }
            li {
                background-color: #fff;
                border: 1px solid #ddd;
                border-radius: 5px;
                padding: 10px 15px;
                margin: 10px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                transition: transform 0.2s;
            }
            li:hover {
                transform: scale(1.05);
            }
            .user-info {
                font-size: 14px;
                color: #555;
            }
        </style>
     
    </head>
    <body>
        <h1>Managing Users using CRUD</h1>
        <form action="/api/users/:id" method="post">
            <input type="number" name="id" id="userId" placeholder="Enter the id" required>
            <button type="submit">Submit</button>
        </form>
        <ul>
            <% if(Users && Users.length > 0) { %>
                <% Users.forEach(user => { %>
                    <li>
                        <div class="user-info">
                            ID: <%= user.id %><br>
                            Name: <%= user.first_name %> <%= user.last_name %><br>
                            Email: <%= user.email %><br>
                            Gender: <%= user.gender %>
                        </div>
                    </li>
                <% }) %>
            <% } else { %>
                <li>No users found</li>
            <% } %>
        </ul>
    </body>
</html>

